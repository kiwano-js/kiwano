{
    "compilerOptions": {
        "lib": ["es2020"],
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2017",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": false,
        "suppressImplicitAnyIndexErrors": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "pretty": true
    },
    "exclude": [
        "**/node_modules",
        "**/dist"
    ],
    "include": ["src/**/*"]
}